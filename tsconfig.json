{
    "compilerOptions": {
        "allowJs": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "jsx": "react",
        "lib": [
            "es2022",
            "dom"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": [
        "src/**/*",
        "imports/**/*"
    ]
}